@{
    ViewData["Title"] = "AIDashBoard";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/toastr.min.js"></script>
<link href="~/js/toastr.min.css" rel="stylesheet" />
<style>

    .chat-container {
        display: flex;
        height: 100vh;
        padding: 10px;
        flex-wrap: wrap;
    }


    .user-info {
        width: 20%;
        background-color: #f1f1f1;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

        .user-info button {
            border: none;
            background-color: #dc3545;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            .user-info button:hover {
                background-color: #c82333;
            }

        .user-info span {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
        }


    .chat-area {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow-y: auto;
        padding: 7%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
        border-radius: 8px;
        margin-left: 10px;
    }

        .chat-area h2 {
            text-align: center;
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }


    .chat-history {
        flex-grow: 1;
        margin-bottom: 10px;
    }

    .user-message, .bot-message {
        margin-bottom: 15px;
    }

    .user-message {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border-radius: 10px;
        align-self: flex-end;
        max-width: 75%;
    }

    .bot-message {
        background-color: #e0e0e0;
        padding: 10px;
        border-radius: 10px;
        align-self: flex-start;
        max-width: 75%;
    }


    .chat-input {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

        .chat-input input {
            width: 85%;
            padding: 10px;
            border-radius: 20px;
            border: 1px solid #ddd;
        }

        .chat-input button {
            width: 12%;
            padding: 10px;
            border-radius: 20px;
            border: 1px solid #ddd;
            background-color: #007bff;
            color: white;
        }

            .chat-input button:hover {
                background-color: #0056b3;
            }


    .ai-assistant-btn {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #28a745;
        color: white;
        border: none;
        padding: 15px;
        border-radius: 0;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }

        .ai-assistant-btn:hover {
            background-color: #218838;
        }


    .modal-dialog {
        max-width: 400px;
        margin: 15% auto;
    }

    .modal-content {
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }


    @@media (max-width: 1024px) {

        .chat-container {
            flex-direction: column;
        }

        .chat-area {
            padding: 10%;
            margin-left: 0;
        }

        .user-info {
            width: 100%;
            margin-bottom: 10px;
        }

        .chat-input input {
            width: 75%;
        }

        .chat-input button {
            width: 20%;
        }
    }

    @@media (max-width: 768px) {

        .chat-container {
            flex-direction: column;
        }

        .user-info {
            width: 100%;
            margin-bottom: 10px;
        }

        .chat-area {
            padding: 10%;
            margin-left: 0;
        }

        .chat-input input {
            width: 75%;
        }

        .chat-input button {
            width: 20%;
        }


        .chat-area h2 {
            font-size: 20px;
        }
    }

</style>

<div class="chat-container">

    <div class="user-info">
        <span>User Info: John Doe</span>
        <button onclick="logout()">Logout</button>
    </div>


    <div class="chat-area">
        <div class="chat-history">

            <div class="user-message">Hi! How are you?</div>
            <div class="bot-message">Hello! I'm here to help you. How can I assist you today?</div>
        </div>


        <div class="chat-input">
            <input type="text" placeholder="Type a message..." id="userMessage">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>
</div>


<button class="ai-assistant-btn" onclick="openAssistantModal()">AI Assistant</button>


<div class="modal fade" id="assistantModal" tabindex="-1" aria-labelledby="assistantModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assistantModalLabel">AI Assistant</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                How can I assist you today?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    function sendMessage() {
        const userMessage = document.getElementById('userMessage').value;
        if (userMessage) {
            const messageContainer = document.querySelector('.chat-history');
            const userMessageDiv = document.createElement('div');
            userMessageDiv.classList.add('user-message');
            userMessageDiv.textContent = userMessage;
            messageContainer.appendChild(userMessageDiv);


            const botMessageDiv = document.createElement('div');
            botMessageDiv.classList.add('bot-message');
            botMessageDiv.textContent = "I’m processing your request...";
            messageContainer.appendChild(botMessageDiv);


            messageContainer.scrollTop = messageContainer.scrollHeight;


            document.getElementById('userMessage').value = '';
        }
    }

    function logout() {
        alert("Logging out...");

    }

    function openAssistantModal() {
        const modal = new bootstrap.Modal(document.getElementById('assistantModal'));
        modal.show();
    }
</script>
