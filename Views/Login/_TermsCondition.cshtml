@{
    ViewData["Title"] = "Terms and Conditions";
}
<style>
    /* Custom styles for Terms and Conditions */
    .terms-container {
        padding-top: 30px;
        padding-bottom: 50px;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    .terms-title {
        text-align: center;
        font-size: 32px;
        font-weight: 600;
        color: #333;
        margin-bottom: 20px;
    }

    .terms-content {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .terms-content h4 {
            font-size: 20px;
            color: #007bff;
            margin-top: 20px;
        }

        .terms-content p {
            font-size: 16px;
            line-height: 1.6;
            color: #555;
            margin-bottom: 15px;
        }

        .terms-content a {
            color: #007bff;
            text-decoration: none;
        }

            .terms-content a:hover {
                text-decoration: underline;
            }

    .form-row-last {
        margin-top: 30px;
    }

    @@media (max-width: 768px) {
        .terms-title {
            font-size: 28px;
        }

        .terms-content {
            padding: 15px;
        }

            .terms-content h4 {
                font-size: 18px;
            }

            .terms-content p {
                font-size: 14px;
            }

        .form-row-last {
            margin-top: 20px;
        }
    }

    @@media (max-width: 576px) {
        .terms-title {
            font-size: 24px;
        }

        .terms-content {
            padding: 10px;
        }

            .terms-content h4 {
                font-size: 16px;
            }

            .terms-content p {
                font-size: 14px;
            }

        .form-row-last {
            margin-top: 15px;
        }
    }

</style>
<div class="terms-container">
    <div class="container">
        <h2 class="terms-title">Terms and Conditions</h2>

        <div class="terms-content">
            <h4>Introduction</h4>
            <p>
                Welcome to our AI-powered ChatBot Application! By accessing or using our application, you agree to comply with and be bound by the following terms and conditions. If you do not agree with these terms, please do not use our application.
            </p>

            <h4>Usage of ChatBot</h4>
